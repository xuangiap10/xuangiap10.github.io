<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Product</title>
        <link href="/css/product.css" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="/js/client_product.js"></script>

    </head>
    <body>
        <%-include('header.ejs') %>
        <div><a href="/addToCart">Cart</a></div>
        <div class="container">
            <form id="addToCart">
                <input type="submit" id="submit" value="Add to Card" name="submit">
                
            <table id="producttable" name="producttable" value="000">
                    <tr class="row">
                        <th class="col">Name</th>
                        <th class="col">Price</th>
                        <th class="col">Description</th>
                        <th class="col">ID</th>
                        <!-- <th class="col">Select</th> -->
                        <th class="col">Quantity</th>
                    </tr>
                    <% for (var i = 0; i < products.length; i++) {%>
                    <tr class="row" name="row" id="row">
                        <td class="col"><%=products[i].getName() %></td>
                        <td class="col"><%=products[i].getPrice() %></td>
                        <td class="col"><%=products[i].getDescription() %></td>
                        <td class="col"><%=products[i].getId() %></td>
                        <td class="col box">
                            <input type="number" name="quantity" 
                            id="<%= products[i].getId() %>" value="0"  min="0"> 
                            <input type="hidden" name="productid" value="<%= products[i].getId() %>">
                        </td>
                    </tr>
                    <% } %>
            </table>
        </form>

        </div>

        <%-include('footer.ejs') %>
    </body>
    
</html>